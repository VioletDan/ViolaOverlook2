.userinfo {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.userinfo .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  transform: scale(0.8);
}

.userinfo .text {
  font-size: 24rpx;
  color: #000;
}
.right{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.letter{
  width: 54rpx;
  height: 43rpx;
  position: relative;
  margin-left: 20rpx;
}
.letter .letterIcon{
  width: 100%;
  height: 100%;
}
.letter .letterNum{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: -10rpx;
  right: -14rpx;
  font-size: 25rpx;
  color: #cb0937;
  font-weight: bold;
}