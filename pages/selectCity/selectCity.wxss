/**标准16:9*/

.content {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.topBox{
  padding: 30rpx 18rpx 30rpx 30rpx;
  border-bottom: 3rpx solid #f6f6f6;
  font-size: 28rpx;
}
.content .treeSelect .van-tree-select{
  height: calc(100% - 120rpx)!important;
}
.content .treeSelect .van-tree-select__content {
   height: calc(100% - 60rpx)!important;
}
.content .treeSelect .mainItem-class,.content .treeSelect .contentItem-class {
  font-size: 28rpx!important;
  color: #333;
}
.content .treeSelect .contentItem-class{
  font-weight: normal!important;
}
